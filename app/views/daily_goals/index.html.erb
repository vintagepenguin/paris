<h1>Listing daily_goals</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Long term goal</th>
      <th>Mid term goal</th>
      <th>Weekly goal</th>
      <th>Date of day</th>
      <th>Time</th>
      <th>Category</th>
      <th>Is current goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_goals.each do |daily_goal| %>
      <tr>
        <td><%= daily_goal.task %></td>
        <td><%= daily_goal.long_term_goal %></td>
        <td><%= daily_goal.mid_term_goal %></td>
        <td><%= daily_goal.weekly_goal %></td>
        <td><%= daily_goal.date_of_day %></td>
        <td><%= daily_goal.time %></td>
        <td><%= daily_goal.category %></td>
        <td><%= daily_goal.is_current_goal %></td>
        <td><%= link_to 'Show', daily_goal %></td>
        <td><%= link_to 'Edit', edit_daily_goal_path(daily_goal) %></td>
        <td><%= link_to 'Destroy', daily_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

