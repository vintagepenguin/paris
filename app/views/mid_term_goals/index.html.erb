<h1>Listing mid_term_goals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>End date</th>
      <th>Is achieved</th>
      <th>Was adjusted</th>
      <th>On pace</th>
      <th>Long term goal</th>
      <th>Is current goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mid_term_goals.each do |mid_term_goal| %>
      <tr>
        <td><%= mid_term_goal.name %></td>
        <td><%= mid_term_goal.end_date %></td>
        <td><%= mid_term_goal.is_achieved %></td>
        <td><%= mid_term_goal.was_adjusted %></td>
        <td><%= mid_term_goal.on_pace %></td>
        <td><%= mid_term_goal.long_term_goal %></td>
        <td><%= mid_term_goal.is_current_goal %></td>
        <td><%= link_to 'Show', mid_term_goal %></td>
        <td><%= link_to 'Edit', edit_mid_term_goal_path(mid_term_goal) %></td>
        <td><%= link_to 'Destroy', mid_term_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

