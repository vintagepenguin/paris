<h1>Listing weekly_goals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Is achieved</th>
      <th>Was adjusted</th>
      <th>On pace</th>
      <th>Long term goal</th>
      <th>Mid term goal</th>
      <th>Is current goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_goals.each do |weekly_goal| %>
      <tr>
        <td><%= weekly_goal.name %></td>
        <td><%= weekly_goal.start_date %></td>
        <td><%= weekly_goal.end_date %></td>
        <td><%= weekly_goal.is_achieved %></td>
        <td><%= weekly_goal.was_adjusted %></td>
        <td><%= weekly_goal.on_pace %></td>
        <td><%= weekly_goal.long_term_goal %></td>
        <td><%= weekly_goal.mid_term_goal %></td>
        <td><%= weekly_goal.is_current_goal %></td>
        <td><%= link_to 'Show', weekly_goal %></td>
        <td><%= link_to 'Edit', edit_weekly_goal_path(weekly_goal) %></td>
        <td><%= link_to 'Destroy', weekly_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

