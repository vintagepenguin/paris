<h1>Listing strengths</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Daily goal</th>
      <th>Long term goal</th>
      <th>Mid term goal</th>
      <th>Weekly goal</th>
      <th>Date of day</th>
      <th>Time</th>
      <th>Category</th>
      <th>Used before</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strengths.each do |strength| %>
      <tr>
        <td><%= strength.description %></td>
        <td><%= strength.daily_goal %></td>
        <td><%= strength.long_term_goal %></td>
        <td><%= strength.mid_term_goal %></td>
        <td><%= strength.weekly_goal %></td>
        <td><%= strength.date_of_day %></td>
        <td><%= strength.time %></td>
        <td><%= strength.category %></td>
        <td><%= strength.used_before %></td>
        <td><%= link_to 'Show', strength %></td>
        <td><%= link_to 'Edit', edit_strength_path(strength) %></td>
        <td><%= link_to 'Destroy', strength, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

